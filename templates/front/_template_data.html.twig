{% for fn in fiainana %}
    <div class="card mb-3  mt-2">
        <div class="card-body p-3">
            <div class="row">
                <div class="col-md-12">
                    <div class="date_holder">
                        <span class="day">{{ fn.publicationDate|date('d') }}</span>
                        <span class="month">{{ fn.publicationDate|date('M') }}</span>
                    </div>
                    <h4 class="card-title">{{ fn.title|replace({'zanaku': 'zanako'}) }}</h4>
                </div>
            </div>
            <div class="mt-5"></div>
            <div class="row">
                <div class="col-md-4">
                    <img src="{{ fn.avatar }}" style="width: 200px;height: 100px"
                         class="mb-2 rounded"
                         alt="">
                </div>
                <div class="col-md-8 overflow-hidden" style="height: 150px">
                    {{ fn.description|raw|replace({'zanaku': 'zanako'})|raw }}
                </div>
            </div>
            <div class="d-flex mt-5 align-items-top">
                <img src="{{ fn.avatar }}" class="img-sm rounded-circle mr-3" alt="image">
                <div class="mb-0 flex-grow text-f">
                    <h5 class="mr-2 mb-2">Fiainana be dia be.</h5>
                    <p class="mb-0 font-weight-light">{{ fn.publicationDate|date('d-m-Y') }}.</p>
                </div>
                <div class="ml-auto">
                    <a href="{{ path('message_details', {'id': fn.id}) }}" class="btn btn-primary">Hamaky
                        <i
                                class="mdi mdi-arrow-right-bold-circle"></i></a>
                </div>
            </div>
        </div>
    </div>
{% endfor %}